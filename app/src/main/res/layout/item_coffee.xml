<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/ic_shape_coffee_card"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/iv_coffee_image"
        android:layout_width="114dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/coffee_americano"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_coffee_name"
        style="@style/Widget.BrewCo.Subtitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/americano"
        app:layout_constraintEnd_toEndOf="@+id/iv_coffee_image"
        app:layout_constraintStart_toStartOf="@+id/iv_coffee_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_coffee_image" />

</androidx.constraintlayout.widget.ConstraintLayout>