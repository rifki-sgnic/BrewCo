<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="327dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/ic_shape_cart">

    <ImageView
        android:id="@+id/iv_coffee_image"
        android:layout_width="82dp"
        android:layout_height="61dp"
        android:layout_marginVertical="18dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/coffee_americano"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cart_coffee_name"
        style="@style/Widget.BrewCo.Subtitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/americano"
        app:layout_constraintBottom_toBottomOf="@+id/iv_coffee_image"
        app:layout_constraintStart_toEndOf="@+id/iv_coffee_image"
        app:layout_constraintTop_toTopOf="@+id/iv_coffee_image"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_cart_coffee_detail"
        style="@style/Widget.BrewCo.Subtitle5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="single | ice | medium | full ice"
        app:layout_constraintStart_toStartOf="@+id/tv_cart_coffee_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_cart_coffee_name" />

    <TextView
        android:id="@+id/tv_cart_coffee_qty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="x 1"
        android:textColor="@color/primaryTextColor"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_cart_coffee_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_cart_coffee_detail"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_cart_coffee_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="35dp"
        android:layout_marginEnd="5dp"
        android:text="Rp 35000"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>